<Window x:Class="vj4_zadatak4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vj4_zadatak4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Height="40" Background="Bisque" VerticalAlignment="Top">
            <Label FontWeight="Bold" Content="FEATURES: " Width="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>
            <Button x:Name="BtnShowCustomers" Content="Show customers" BorderThickness="0" Width="200" Background="Transparent" FontWeight="Bold"></Button>
            <Button x:Name="BtnNewCustomer" Content="New customer..." BorderThickness="0" Width="200" Background="Transparent" FontWeight="Bold"></Button>
            <Button x:Name="BtnExit" Content="Exit" BorderThickness="0" Width="200" Background="Transparent" FontWeight="Bold" Click="BtnExit_Click"></Button>
        </StackPanel>
    </DockPanel>
</Window>
