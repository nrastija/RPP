<UserControl x:Class="vj4_zadatak7.ShowSuppliers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vj4_zadatak7"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Background="White" LastChildFill="True">
        <Label Content="Suppliers:" DockPanel.Dock="Top" FontWeight="Bold" FontSize="18" Margin="30,29,0,0"></Label>
        <Button x:Name="BtnShowDetails" Width="100" Height="30" Background="#FFFFEEC3" Content="Show details..." DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="0,0,40,30" />
        <DataGrid x:Name="DgvSuppliers" Margin="40,10,40, 10"></DataGrid>
    </DockPanel>
</UserControl>
