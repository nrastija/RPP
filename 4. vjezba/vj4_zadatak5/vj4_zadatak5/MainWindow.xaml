<Window x:Class="vj4_zadatak5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vj4_zadatak5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Vertical" DockPanel.Dock="Left" Width="150" HorizontalAlignment="Left" Background="#FFE6B8FF">
            <Label Content="FEATURES" FontWeight="Bold" Height="50" FontSize="20" VerticalContentAlignment="Center"  HorizontalContentAlignment="Center" Background="#FFD382FF" ></Label>
            <Button x:Name="BtnShowProducts" FontWeight="bold" FontSize="16" Height="40" Content="Show products" BorderThickness="0" Background="Transparent"></Button>
            <Button x:Name="BtnExit" FontWeight="bold" FontSize="16" Height="40" Content="Exit" BorderThickness="0" Background="Transparent" Click="BtnExit_Click"></Button>
        </StackPanel>
        
        <ContentControl x:Name="ControlPanel"></ContentControl>
    </DockPanel>
</Window>
