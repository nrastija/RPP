<UserControl x:Class="vj4_zadatak5.ShowProducts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vj4_zadatak5"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Background="White" LastChildFill="True">
        <Label Content="Products" HorizontalContentAlignment="Center" Background="#FFD382FF" Height="50" FontSize="20" FontWeight="Bold" VerticalAlignment="Top"  VerticalContentAlignment="Center" DockPanel.Dock="Top"></Label>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,50,20">
            <Button x:Name="BtnNew" Width="80" Content="New..." Background="#FFD382FF" Margin="0,0,10,0"></Button>
            <Button x:Name="BtnDelete" Width="80" Content="Delete" Background="#FFD382FF"></Button>
        </StackPanel>
        <DataGrid x:Name="DgvProducts" Margin="50,20,50,20"></DataGrid>
    </DockPanel>
</UserControl>
