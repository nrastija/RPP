<Window x:Class="vj4_zadatak6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vj4_zadatak6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Height="50" Background="#FFFBB1B1" VerticalAlignment="Top">
            <Label Content="FEATURES" FontWeight="Bold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="200"></Label>
            <Button x:Name="BtnShowProducts" Content="Show products" Background="Transparent" Width="200" FontWeight="Bold" BorderThickness="0"></Button>
            <Button x:Name="BtnNewProduct" Content="New product..." Background="Transparent" Width="200" FontWeight="Bold" BorderThickness="0" ></Button>
            <Button x:Name="BtnExit" Content="Exit" Background="Transparent" Width="200" FontWeight="Bold" BorderThickness="0" Click="BtnExit_Click"></Button>
        </StackPanel>
    </DockPanel>
</Window>
