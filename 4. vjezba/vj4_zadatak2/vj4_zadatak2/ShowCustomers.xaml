<UserControl x:Class="vj4_zadatak2.ShowCustomers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vj4_zadatak2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel LastChildFill="True" Background="White">
        <Label x:Name="lblCustomer" Content="Customers" FontWeight="bold" DockPanel.Dock="Top" Background="#FFC7FFB9" VerticalAlignment="top" HorizontalContentAlignment="Center" VerticalContentAlignment="center"></Label>

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,50,10">
            <Button x:Name="btnNew" Content="New..." Width="80" Height="30" Background="#FFC7FFB9" Margin="0,0,18,0" Click="btnNew_Click" />
            <Button x:Name="btnDelete" Content="Delete" Background="#FFC7FFB9" Width="50" Height="30" Click="btnDelete_Click"></Button>
        </StackPanel>

        <DataGrid x:Name="dgvCustomers" Margin="50,20,50,10" BorderBrush="#FFC7FFB9"></DataGrid>

    </DockPanel>


</UserControl>
