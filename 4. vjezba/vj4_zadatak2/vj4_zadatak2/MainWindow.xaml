<Window x:Class="vj4_zadatak2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vj4_zadatak2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel HorizontalAlignment="Left" Width="150" Background="#FFC7FFB9">
            <Label Content="FEATURES" FontWeight="Bold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="#FF7BB360"></Label>
            <Button x:Name="btnShowCustomers" Content="Show customers" FontWeight="Bold" Background="Transparent" BorderThickness="0" Click="btnShowCustomers_Click"></Button>
            <Label Content="------------------------------------"></Label>
            <Button x:Name="btnExit" Content="Exit" FontWeight="Bold" Background="Transparent" BorderThickness="0" Click="btnExit_Click" ></Button>
        </StackPanel>
        
        <ContentControl x:Name="controlPanel"></ContentControl>
    </DockPanel>
</Window>
